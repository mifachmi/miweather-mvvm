<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/new_york_location"
                layout="@layout/item_other_location" />

            <include
                android:id="@+id/singapore_location"
                layout="@layout/item_other_location" />

            <include
                android:id="@+id/mumbai_location"
                layout="@layout/item_other_location" />

            <include
                android:id="@+id/delhi_location"
                layout="@layout/item_other_location" />

            <include
                android:id="@+id/sydney_location"
                layout="@layout/item_other_location" />

            <include
                android:id="@+id/melbourne_location"
                layout="@layout/item_other_location" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>